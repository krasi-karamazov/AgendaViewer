<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/agenda_day_bar_background_color"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/top_divider_simple"
        android:layout_height="1px"
        android:background="@color/agenda_list_separator_color"
        android:layout_width="match_parent" />
    <View
        android:id="@+id/top_divider_past_present"
        android:background="@color/agenda_past_present_separator_color"
        android:visibility="gone"
        android:layout_height="2dip"
        android:layout_width="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp">
        <TextView
            android:id="@+id/tv_day"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:textSize="12sp"
            android:textColor="@color/agenda_day_item_text_color" />
        <TextView
            android:id="@+id/tv_date"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:textSize="24sp"
            android:textColor="@color/agenda_day_item_text_color" />
    </LinearLayout>
</LinearLayout>