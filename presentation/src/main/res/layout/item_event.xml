<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <View
        android:layout_height="1dp"
        android:background="@color/agenda_list_separator_color"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"/>
    <View
        android:id="@+id/agenda_item_color"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/agenda_item_text_container"
        android:layout_alignBottom="@+id/agenda_item_text_container"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:id="@+id/agenda_item_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|fill_horizontal"
        android:layout_marginStart="30dp"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="marquee"
            android:textColor="@color/agenda_item_standard_color"
            style="?android:attr/textAppearanceMediumInverse" />

        <TextView
            android:id="@+id/tv_when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="14sp"
            android:ellipsize="marquee"
            android:textColor="@color/agenda_item_where_text_color"
            style="?android:attr/textAppearanceSmallInverse" />

        <TextView
            android:id="@+id/tv_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dip"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="14sp"
            android:textColor="@color/agenda_item_where_text_color"
            style="?android:attr/textAppearanceSmallInverse" />
    </LinearLayout>
</RelativeLayout>
